# Server
PORT=3001
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/mailvet

# Firebase Admin SDK
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"

# Resend (Email)
RESEND_API_KEY=re_your_resend_api_key
EMAIL_FROM=noreply@mailvet.app

# JWT
JWT_SECRET=dev-super-secret-key-change-me
JWT_EXPIRES_IN=30d

# Cookie Configuration (optional - defaults work for most setups)
# COOKIE_SECURE=false          # Set to true for HTTPS in production
# COOKIE_SAMESITE=lax          # Options: lax, strict, none
# COOKIE_DOMAIN=.yourdomain.com # Set for cross-subdomain cookies

# Frontend URLs
FRONTEND_URL=http://localhost:8080
DASHBOARD_URL=http://localhost:8080/dashboard

